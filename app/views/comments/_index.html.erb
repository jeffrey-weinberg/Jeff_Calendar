<div class="card">
  <div class="card-body">
    <h2>Comments</h2>
    <% @event.comments.each do |comment| %>
      <p>
        <%= comment.body %>
      </p>
    
      <p>
       - <%= comment.author %>
      </p>

      <%= link_to "Delete", [comment.event, comment], 
          method: :delete, 
          data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
</div>

<h2>Add a comment:</h2>
<%= form_with(model: [ @event, @event.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>